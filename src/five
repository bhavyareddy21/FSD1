function Booleancase({isTrue})
{
    return(
        <div>
            {isTrue ?  
                <div>
                    <h2>The boolean value is true</h2>
                    <p>This content is shown is true.</p>
                </div>: 
                <div>
                    <h2>The boolean value is false</h2>
                    <p>This content is shown is false.</p>
                </div>}
        </div>
    );
}
export default Booleancase